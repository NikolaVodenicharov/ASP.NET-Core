                <label>LightMeterings</label>
                <br />
                @foreach (CkeckboxLightMeteringModel lightMeteringModel in Model.CheckboxLightMeteringModels)
                {
                    <input asp-for-collection="CheckboxLightMeteringModels" type="checkbox" value="@lightMeteringModel.IsCheck" />
