                }
            </div>*@

            <div class="form-group">
                <label>LightMeterings</label>
                <br />
                @for (int i = 0; i < Model.CheckboxLightMeteringModels.Count(); i++)
                {
                    <input asp-for="CheckboxLightMeteringModels[i].IsCheck" type="checkbox"/>
                    <label asp-for="CheckboxLightMeteringModels[i].LightMetering">@Model.CheckboxLightMeteringModels[i].LightMetering</label>
                }
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" type="text" class="form-control" />
                <span asp-validation-for="Description" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageURL">ImageURL</label>
                <input asp-for="ImageURL" type="text" class="form-control" />
                <span asp-validation-for="ImageURL" class="form-text text-danger"></span>
            </div>

            <div>
                <input class="btn btn-success" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>