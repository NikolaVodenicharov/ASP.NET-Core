@model PagedCarsModel

@{
    ViewData["Title"] = "GetCarsWithParts";
}

<h2>All cars</h2>

@{
    string DisablePrevious = Model.CurrentPage == 1 ? "disabled" : "";
    string DisableNext = Model.CurrentPage == Model.TotalPage ? "disabled" : "";
}


<ul class="pagination">

    <li class="page-item @DisablePrevious">
        <a class="page-link" href="/car/PagedCars/@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>

    <li class="page-item active">
        <a class="page-link" href="#">@Model.CurrentPage <span class="sr-only">(current)</span> </a>
    </li>

    <li class="page-item @DisableNext">
        <a class="page-link" href="/car/PagedCars/@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>

</ul>



<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelled distance
            </th>
            <th>
                Parts details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var carWithParts in Model.Cars)
        {
            <tr>
                <td>
                    @carWithParts.Make
                </td>
                <td>
                    @carWithParts.Model
                </td>
                <td>
                    @(carWithParts.TravelledDistance / 1000) km
                </td>
                <td>
                    <a>Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
