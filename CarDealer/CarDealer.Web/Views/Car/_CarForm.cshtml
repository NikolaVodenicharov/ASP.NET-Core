@model CarFormModel


@{
    ViewData["Title"] = "_CarForm";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Make">Make</label>
        <input asp-for="Make" type="text" class="form-control" />
        <span asp-validation-for="Make" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" type="text" class="form-control" />
        <span asp-validation-for="Model" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TravelledDistance">TravelledDistance</label>
        <input asp-for="TravelledDistance" type="number" class="form-control" />
        <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
    </div>

    <div>
        <input class="btn btn-success" type="submit" value="Save customer" />
    </div>
</form>