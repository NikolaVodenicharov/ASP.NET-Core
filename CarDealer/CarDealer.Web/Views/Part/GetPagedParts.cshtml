@model PagedPartsModel

@{
    ViewData["Title"] = "GetAll";
}

<h2>All parts</h2>

@{
    string DisablePrevious = Model.CurrentPage == 1 ? "disabled" : "";
    string DisableNext = Model.CurrentPage == Model.TotalPages ? "disabled" : "";
}


<ul class="pagination">

    <li class="page-item @DisablePrevious">
        <a class="page-link" href="/part/GetPagedParts/@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>

    <li class="page-item active">
        <a class="page-link" href="#">@Model.CurrentPage <span class="sr-only">(current)</span> </a>
    </li>

    <li class="page-item @DisableNext">
        <a class="page-link" href="/part/GetPagedParts/@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>

</ul>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Part name
            </th>
            <th>
                Part price
            </th>
            <th>
                Part quantity
            </th>
            <th>
                Part options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (PartModel part in Model.Parts)
        {
            <tr>
                <td>
                    @part.Name
                </td>
                <td>
                    @part.Price
                </td>
                <td>
                    @part.Quantity
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/part/edit/@part.SupplierId/@part.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/part/delete/@part.SupplierId/@part.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />