@model SuppliersViewModel

@{
    ViewData["Title"] = "GetSuppliers";
}

<h2>@Model.SupplierType suppliers</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Number of parts
            </th>
            <th>
                Add part
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model.Suppliers)
        {
            <tr>
                <td>
                    @supplier.Id
                </td>
                <td>
                    @supplier.Name
                </td>
                <td>
                    @supplier.PartsCount
                </td>
                <td>
                    <a class="btn btn-sm btn-default" href="/part/add/@supplier.Id">Add</a>
                </td>
            </tr>
        }
    </tbody>
</table>

