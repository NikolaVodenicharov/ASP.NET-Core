@model  IEnumerable<CartItemDetailsServiceModel>
@{
    ViewData["Title"] = "All cart products";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-controller="Cart" asp-action="FinishOrder">Finish order</a>